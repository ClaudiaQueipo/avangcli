{
  "name": "avangcli",
  "version": "1.0.11",
  "description": "Master CLI for scaffolding fullstack projects with Next.js",
  "type": "module",
  "bin": {
    "avangcli": "./bin/avangcli"
  },
  "files": [
    "bin",
    "frontend-cli"
  ],
  "scripts": {
    "dev": "node bin/avangcli",
    "dev:frontend": "cd frontend-cli && node index.js",
    "dev:backend": "cd backend-cli && python3 generator.py",
    "install:frontend": "cd frontend-cli && bun install",
    "install:backend": "cd backend-cli && pip install -r requirements.txt",
    "install:all": "bun install && bun run install:frontend && bun run install:backend",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,jsx,json,md}\"",
    "prepare": "husky",
    "test": "echo \"Error: no test specified\" && exit 1",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "nextjs",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.39.1",
    "@types/node": "^22",
    "eslint": "^9.39.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.4"
  },
  "lint-staged": {
    "frontend-cli/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "frontend-cli/**/*.{json,md}": [
      "prettier --write"
    ],
    "web-docs/**/*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "web-docs/**/*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
