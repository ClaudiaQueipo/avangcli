version: '3.8'

services:
  db:
    image: postgres:15-alpine
    container_name: {{ project_slug }}_db_prod
    environment:
      POSTGRES_USER: ${POSTGRES_USER:-{{ project_slug }}_user}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB:-{{ project_slug }}_db}
    volumes:
      - postgres_data_prod:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-{{ project_slug }}_user}"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  api:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{ project_slug }}_api_prod
    ports:
      - "8000:8000"
    environment:
      DATABASE_URL: postgresql://${POSTGRES_USER:-{{ project_slug }}_user}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB:-{{ project_slug }}_db}
      RELOAD: "false"
    depends_on:
      db:
        condition: service_healthy
    restart: unless-stopped

volumes:
  postgres_data_prod:
