# {{ project_name }} - Environment Variables

# API Configuration
PROJECT_NAME={{ project_name }}
VERSION=0.1.0
API_V1_STR=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
{% if use_database %}

# Database Configuration
DATABASE_URL=postgresql://{{ project_slug }}_user:dev_password@localhost:5432/{{ project_slug }}_db
DB_ECHO=false
{% endif %}
